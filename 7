def reverse(x):
        INT_MAX = 2**31 -1 
        INT_MIN = - 2**31

        neg = x<0
        if neg: 
            x = -x 
        
        reversed_str = str(x)[::-1]
        reversed_int = int(reversed_str)

        if neg: 
            reversed_int = -reversed_int

        if reversed_int <= INT_MIN or reversed_int >= INT_MAX:
            return 0

        return reversed_int
